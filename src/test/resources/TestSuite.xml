<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="Balsam Hill Test Suite" parallel="tests" thread-count="2">

    <!-- Suite level parameters -->
    <parameter name="browser" value="chrome"/>
    <parameter name="environment" value="staging"/>
    <parameter name="timeout" value="30"/>

    <!-- Test Listeners -->
    <listeners>
        <listener class-name="com.balsamhill.automation.listeners.TestListener"/>
        <!-- Add Allure TestNG listener if you have Allure -->
        <listener class-name="io.qameta.allure.testng.AllureTestNg"/>
    </listeners>

    <!-- Search Tests -->
    <test name="Balsam Hill Search Tests">
        <parameter name="testType" value="search"/>

        <classes>
            <class name="com.balsamhill.automation.tests.BalsamHillSearchTests"/>
        </classes>
    </test>

</suite>